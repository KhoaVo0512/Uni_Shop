@model Uni_Shop.Models.CreateImg

@{
    Layout = null;
}


<div class="basic-form">
    <form asp-action="CreateUploadFile" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form border border-5">
            <div class="p-2">
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="nongsandetail.MaLoaiNongSan" class="control-label">Loại Nông Sản</label>
                        <select asp-for="nongsandetail.MaLoaiNongSan" class="form-control" asp-items="ViewBag.temp4"></select>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="gianhangdetail.MaGianHang" class="control-label">Gian Hàng</label>
                        <select asp-for="gianhangdetail.MaGianHang" class="form-control" asp-items="ViewBag.temp1" disabled></select>
                        <select hidden asp-for="gianhangdetail.MaGianHang" class="form-control" asp-items="ViewBag.temp1" ></select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="donvitinhdetail.MaDonViTinh" class="control-label">Đơn Vị Tính</label>
                        <select asp-for="donvitinhdetail.MaDonViTinh" class="form-control" asp-items="ViewBag.temp3"></select>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="nongsandetail.TenNongSan" class="control-label">Tên Nông Sản</label>
                        <input asp-for="nongsandetail.TenNongSan" class="form-control" required />
                        <span asp-validation-for="nongsandetail.TenNongSan" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group  col-6">
                        <label asp-for="nongsandetail.TrongLuong" class="control-label">Trọng Lượng</label>
                        <input asp-for="nongsandetail.TrongLuong" class="form-control" required />
                        <span asp-validation-for="nongsandetail.TrongLuong" class="text-danger"></span>
                    </div>
                    <div class="form-group  col-6">
                        <label asp-for="nongsandetail.SoLuong" class="control-label">Số Lượng</label>
                        <input asp-for="nongsandetail.SoLuong" class="form-control" required />
                        <span asp-validation-for="nongsandetail.SoLuong" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="nongsandetail.Gia" class="control-label">Giá Bán</label>
                        <input asp-for="nongsandetail.Gia" class="form-control" required />
                        <span asp-validation-for="nongsandetail.Gia" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="nongsandetail.MoTa" class="control-label">Mô Tả</label>
                        <input asp-for="nongsandetail.MoTa" class="form-control" />
                        <span asp-validation-for="nongsandetail.MoTa" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label  class="control-label">Đường dẫn</label>
                        <input type="file" name="myfile" placeholder="Chọn hình ảnh nông sản" class="form-control" required />

                    </div>
                </div>
                <br />
                <div class="form-col">
                    <div align="center">
                        <h3 align="center">Xác Nhận Thông Tin</h3>
                        <div class="form-group">
                            <button type="reset" class="btn btn-dark">Đặt Lại</button>
                            <input type="submit" asp-action="CreateUploadFile" asp-controller="QuanLyNS" asp-area="Partner" value="Save" class="btn btn-primary">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>




                                <li class="loai" id="@Html.DisplayFor(modelItem => item.MaLoaiNongSan)"><a onclick="ShowFilter1(@Html.DisplayFor(modelItem => item.MaLoaiNongSan))">@Html.DisplayFor(modelItem => item.TenLoaiNongSan)</a></li>

                            }


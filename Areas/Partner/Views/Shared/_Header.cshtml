@using Microsoft.AspNetCore.Http;
<style>
    .dropdown-submenu {
        position: relative;
    }

        .dropdown-submenu .dropdown-menu {
            top: 0;
            left: 100%;
            margin-top: -1px;
        }
</style>

<div class="bg-main">
    <nav class="container navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid justify-content-between">
            <!-- Left elements -->
            <div class="d-flex">
                <!-- Brand -->
                <a class="navbar-brand me-2 mb-1 d-flex align-items-center" href="#">
                    <img src="/images/logo.png"
                         height="50"
                         alt="MDB Logo"
                         loading="lazy"
                         style="margin-top: 2px;" />
                </a>

                <!-- Search form -->
                <form class="input-group w-auto my-auto d-none d-sm-flex">
                    <input autocomplete="off"
                           type="search"
                           class="form-control rounded"
                           placeholder="Search"
                           style="min-width: 125px;" />
                    <span class="input-group-text border-0 d-none d-lg-flex">
                        <i class="fas fa-search"></i>
                    </span>
                </form>
            </div>
            <!-- Left elements -->

            <!-- Center elements -->
            <ul class="navbar-nav flex-row d-none d-md-flex">
                <li>
                    <a class="nav-link" asp-action="Filter1" asp-area="Partner" asp-controller="QuanLyNS">
                        <span>Trang chủ</span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" asp-action="giaodiendoitac" asp-area="Partner" asp-controller="Home">
                        <span>Danh sách đơn đặt</span>
                    </a>
                </li>            
            </ul>
            <!-- Center elements -->
            <!-- Right elements -->
            <ul class="navbar-nav flex-row">
                @* Cart *@
                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link" href="/cart">
                        <span><i class="fas fa-shopping-bag fa-lg"></i></span>
                        <span class="badge rounded-pill badge-notification bg-danger">1</span>
                    </a>
                </li>
                @* Account *@
                <li class="nav-item me-3 me-lg-1">
                    <a class="nav-link d-sm-flex align-items-sm-center" href="#">
                        <img src="https://mdbcdn.b-cdn.net/img/new/avatars/1.webp"
                             class="rounded-circle"
                             height="22"
                             alt="Black and White Portrait of a Man"
                             loading="lazy" />
                        @if (@Context.Session.GetString("username") != null)
                        {
                            <strong class="d-none d-sm-block ms-1">@Context.Session.GetString("username")</strong>
                        }
                        else
                        {
                            <strong class="d-none d-sm-block ms-1">Guest</strong>
                        }

                    </a>
                </li>
                <li class="nav-item dropdown me-3 me-lg-1 ">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-plus-circle fa-lg"></i>
                    </a>
                    <ul class="dropdown-menu " aria-labelledby="navbarDarkDropdownMenuLink">
                        @if (@Context.Session.GetString("username") == null)
                        {
                            <li><a class="dropdown-item" href="/login">Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="/register">Đăng ký</a></li>
                        }
                        else
                        {
                            <li><a class="dropdown-item" href="#">Thông tin cá nhân</a></li>
                            <li><a class="dropdown-item" href="/Logout">Đăng xuất</a></li>
                        }
                    </ul>
                </li>
            </ul>

            <!-- Right elements -->
        </div>
    </nav>
</div>
